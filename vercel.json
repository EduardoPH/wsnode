{
  "version": 2,
  "builds": [
    {
      "src": "src/server/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "src/**/*.js",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/.*",
      "dest": "src/server/server.js"
    },
    {
      "src": "/",
      "dest": "public/index.html"
    },
    {
      "src": "/src/(.*)",
      "dest": "src/$1"
    }
  ],
  "env": {
    "PORT": "3030"
  },
  "scripts": {
    "build": "cp -R src/*.js public/"
  }
}
