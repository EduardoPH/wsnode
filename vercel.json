{
  "version": 2,
  "builds": [
    {
      "src": "src/server/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/.*",
      "dest": "src/server/server.js"
    },
    {
      "src": "/",
      "dest": "public/index.html"
    }
  ],
  "env": {
    "PORT": "3030"
  },
  "static": {
    "directory": "public,src",
    "public": true,
    "cleanUrls": true,
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
